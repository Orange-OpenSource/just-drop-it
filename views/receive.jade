extends layout
block extra_scripts
    script(src="/socket.io/socket.io.js")
    script(src="/js/socket.io-stream.js")
    script(src="/js/ZeroClipboard.min.js")
    script(src="/js/jdropit-receive.js")
    script.
        window.onload = function(){
            receiveFile(#{isLocal},  "#{senderId}");
        }
block content
    div(class="row" id="step0")
        div(class="col-xs-12")
            h3 Hello
                span(class="username")
            p Someone just dropped you a file
    div(class="row" id="transfertdiv")
        div(class="col-xs-12")
            div(class="progress")
                div(id="transfertpb" class="progress-bar  progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em;") 0%
            p File:
                span(class="filename")

    div(class="row" id="step4-outro" hidden="true")
        div(class="col-xs-12")
            h3 Thank you!
            p Your friend knows you received the file. You can close this page now.
