doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Just drop it
        if isLocal
            link(rel='stylesheet', href='/css/orangeIcons.css')
            link(rel='stylesheet', href='/css/boosted.css')
            link(rel='stylesheet', href='/css/tether.css')
        else
            link(rel='stylesheet', href='/css/orangeIcons.min.css')
            link(rel='stylesheet', href='/css/boosted.min.css')
            link(rel='stylesheet', href='/css/tether.min.css')
        link(rel='stylesheet', href='/css/justdropit.css')

        block extra_styles

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        //script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
        //script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
        if isLocal
            script(src="/jquery.js")
            script(src="/js/tether.js")
            script(src="/js/boosted.js")
            script(src="/js/common-libraries.js")
            script(src="/js/jdropit-whatsnew.js")
            script(src="/js/jdropit-notif.js")
        else
            script(src="/jquery.min.js")
            script(src="/js/tether.min.js")
            script(src="/js/boosted.min.js")
            script(src="/js/common-libraries.min.js")
            script(src="/js/jdropit-whatsnew.min.js")
            script(src="/js/jdropit-notif.min.js")
        script.
            if (typeof console == "undefined"){
                window.console = {
                    log : function(msg){},
                    debug : function(msg){},
                    error : function(msg){alert(msg);}
                };
            }
            if(typeof String.prototype.trim !== 'function') {
                String.prototype.trim = function() {
                    return this.replace(/^\s+|\s+$/g, '');
                }
            }
        block extra_scripts
    body
        include ./header
        main
            div.container
                div.alert.alert-warning#warning-window(style="display: none;")
                    span.icon-Warningimportant(aria-hidden="true")
                    span.sr-only Warning:
                    span
                        | &nbsp; Don't close this window!
                include ./user_messages
                block content
        include ./footer





