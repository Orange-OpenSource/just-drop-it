block modal_extra_scripts
div.modal.fade(tabindex="-1")
    div.modal-dialog
        div.modal-content
            div.modal-header
                h5.modal-title
                    block modal_title
                button.btn-close(type="button" data-bs-dismiss="modal")
                    span.visually-hidden Close

            div.modal-body
                block modal_body
            div.modal-footer
                button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Close