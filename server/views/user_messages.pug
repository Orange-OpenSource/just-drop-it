script.
    function _appendMessage(message, alert){
        var rowDiv = $("<div>", {role: "alert"})
            .addClass("alert")
            .addClass(alert? "alert-danger": "alert-info")
            .addClass("alert-dismissible fade show");

        //<span class="alert-icon"><span class="visually-hidden">Warning</span></span>
        var iconSpan= $("<span>", {}).addClass("alert-icon")

       rowDiv.append(iconSpan);

        var buttonProperties = {type: "button"};
        buttonProperties["data-bs-dismiss"] = "alert";

        var closeButtonAccessibility =  $("<span>", {}).addClass("visually-hidden")

        rowDiv.append(
            $("<button>", buttonProperties)
                .addClass("btn-close")
                .append(closeButtonAccessibility
                    .html("close"))
        );
        rowDiv.append(message);
        var userMessages = $("#userMessages");
        userMessages.empty();
        userMessages.append(rowDiv);
    }
    function appendError(message) {
        _appendMessage(message, true);
    }
div#userMessages

